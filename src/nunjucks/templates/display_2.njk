<div class="company-merits d-flex">

  {% set classScenery = ["background-shadow", "background-home", "blu-circle", "dark-blu-circle", "small-blu-circle"] %}

  {% for backgroundPictures in ClassScenery %}
    <div class={{BackgroundPictures}}></div>
  {% endfor %}

  <h1 class="ahy-arda">Why Arda<br>Real Estate Consulting?</h1>

  <div class="advantages d-flex">
    {% set advantageCards = [
                              {
                                class:'logo-card-1',
                                title:'Excellent reputation.',
                                description :'The Arda Real Estate Consulting reputation among investors was
                                              formed by our  Research group and has been reinforced by our Consulting
                                              team by providing well thought-out, unbiased commendations and advice.'
                              },

                              {
                               class:'logo-card-2',
                               title:'Experienced team.',
                               description :'Our Consulting group is led by a senior management team each with 20+
                                             years of  direct executive level homebuilding,  development, and consulting
                                             experience.'
                              },
                              {
                               class:'logo-card-3',
                               title:'National Footprint.',
                               description :'Many of our clients operate throughout the country. We are one of the largest
                                             and most geographically diverse consulting groups  which allows us to best service
                                             their needs.'
                              },
                              {
                               class:'logo-card-4',
                               title:'Excellent Service.',
                               description :'Often times our clients do not have full control over  timing for their deals and the
                                             Consulting  team has a knack for making miracles happen.'
                              }
                            ] %}


    {% for item in advantageCards %}

      <div class="advantage-card">

        <div class={{item.class}}></div>

          <h2>{{item.title}}</h2>

        <p>{{item.description}}</p>

      </div>

    {% endfor %}

  </div>

  <a href="#" class="button-contact">
    <span>Contact us now</span><div class="arrow"></div>
  </a>

</div>
